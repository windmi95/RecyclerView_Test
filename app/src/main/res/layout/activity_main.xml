<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_categoryLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
    >

    <TextView
        android:id="@+id/tv_category_name"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:paddingStart="16dp"
        android:paddingTop="22dp"
        android:paddingBottom="21dp"
        android:text="Category"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:background="@color/category_title"
        android:fontFamily="@font/inter"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_category_info_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cl_categoryLine"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        >
    <TextView
        android:id="@+id/tv_category_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/category_info"
        android:textColor="@color/black"
        android:fontFamily="@font/inter"
        android:textSize="24sp"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_category_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_category_info_line">

        <android.widget.Button
            android:id="@+id/btn_business"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="29dp"
            android:background="@drawable/btn_business_shape"
            android:drawableTop="@drawable/business1"
            android:fontFamily="@font/inter"
            android:paddingTop="18dp"
            android:paddingBottom="20dp"
            android:text="business"
            android:textAllCaps="false"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/btn_music"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </android.widget.Button>

        <android.widget.Button
            android:id="@+id/btn_music"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="29dp"
            android:layout_marginEnd="29dp"
            android:background="@drawable/btn_entertainment_shape"
            android:drawableTop="@drawable/akar_icons_music"
            android:fontFamily="@font/inter"
            android:paddingTop="18dp"
            android:paddingBottom="20dp"
            android:text="entertainment"
            android:textAllCaps="false"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/btn_general"
            app:layout_constraintStart_toEndOf="@+id/btn_business"
            app:layout_constraintTop_toTopOf="parent">

        </android.widget.Button>

        <android.widget.Button
            android:id="@+id/btn_general"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="29dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/btn_general_shape"
            android:drawableTop="@drawable/akar_icons_people"
            android:fontFamily="@font/inter"
            android:paddingTop="18dp"
            android:paddingBottom="20dp"
            android:text="general"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/btn_music"
            app:layout_constraintTop_toTopOf="parent"
            >

        </android.widget.Button>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_category_btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_category_btn">

        <android.widget.Button
            android:id="@+id/btn_health"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="29dp"
            android:background="@drawable/btn_health_shape"
            android:drawableTop="@drawable/carbon_health_cross"
            android:fontFamily="@font/inter"
            android:paddingTop="18dp"
            android:paddingBottom="20dp"
            android:text="health"
            android:textAllCaps="false"
            app:layout_constraintEnd_toStartOf="@+id/btn_science"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </android.widget.Button>

        <android.widget.Button
            android:id="@+id/btn_science"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="29dp"
            android:layout_marginEnd="29dp"
            android:background="@drawable/btn_science_shape"
            android:drawableTop="@drawable/eos_icons_science_outlined"
            android:fontFamily="@font/inter"
            android:paddingTop="18dp"
            android:paddingBottom="20dp"
            android:text="science"
            android:textAllCaps="false"
            app:layout_constraintEnd_toStartOf="@+id/btn_sports"
            app:layout_constraintStart_toEndOf="@+id/btn_health"
            app:layout_constraintTop_toTopOf="parent">
        </android.widget.Button>

        <android.widget.Button
            android:id="@+id/btn_sports"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/btn_sports_shape"
            android:drawableTop="@drawable/ic_baseline_sports_soccer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_science"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingTop="18dp"
            android:paddingBottom="20dp"
            android:text="sports"
            android:textAllCaps="false"
            android:fontFamily="@font/inter"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="29dp"
            >
        </android.widget.Button>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_category_btn3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cl_category_btn2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="36dp"
        >

        <android.widget.Button
            android:id="@+id/btn_technology"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/btn_technology_shape"
            android:drawableTop="@drawable/mdi_robot_industrial_outline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0"
            android:paddingTop="18dp"
            android:paddingBottom="20dp"
            android:text="technology"
            android:textAllCaps="false"
            android:fontFamily="@font/inter"
            android:textSize="12sp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="254dp"
            >

        </android.widget.Button>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>